generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserStatus {
  ACTIVE
  INACTIVE
  PENDING
  BLOCKED
}

model User {
  id         String     @id @default(uuid())
  email      String     @unique
  name       String?
  password   String
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  status     UserStatus @default(PENDING)
  bookmarks  Bookmark[]

  @@index([email])
  @@index([id])
  @@index([status])
  @@map("users")
}

model Bookmark {
  id          String   @id @default(cuid())
  url         String   @unique
  title       String
  description String?
  tags        Tag[]
  user_id     String
  user        User     @relation(fields: [user_id], references: [id])
  embedding   Json?
  created_at  DateTime @default(now())

  @@index([url])
  @@index([id])
  @@index([user_id])
  @@index([created_at])
  @@map("bookmarks")
}

model Tag {
  id         String     @id @default(cuid())
  name       String     @unique
  bookmarks  Bookmark[]
  created_at DateTime   @default(now())

  @@index([name])
  @@index([id])
  @@map("tags")
}
